<p style="color: green"><%= notice %></p>

<h1>Animales</h1>
<div class="table-responsive" id="animals">
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre Animal</th>
            <th>Nombre Granjero</th>
            <th colspan="3">Acciones</th>
        </tr>
    </thead>
    <tbody>
    <% @animals.each do |animal| %>
        <tr>
            <td><%= animal.id%></td>
            <td><%= animal.name%></td>
            <td><%= animal.farmer.name%></td>
            <td>
            <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to "Show", animal,  class:'btn btn-outline-primary btn-sm' %>
            <%= link_to "Edit", edit_animal_path(animal), class:'btn btn-outline-primary btn-sm' %>
            <%= button_to "Destroy", animal, method: :delete, class:'btn btn-outline-primary btn-sm' %>
            </div>
            </td>
        </tr>
        <%end%>
      



      
    </tbody>
</table>




 
</div>

<%= link_to "New animal", new_animal_path %>
